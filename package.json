{
  "name": "1game-texas-holdem",
  "version": "0.0.0-semantically-released",
  "description": "Texas Hold'em developed in NodeJS by 1game",
  "main": "dist/index.js",
  "scripts": {
    "commit": "git-cz",
    "check-coverage": "nyc check-coverage --statements 100 --branches 100 --functions 100 --lines 100",
    "watch:test": "npm t -- -w",
    "test": "mocha --compilers js:babel-register",
    "cover": "nyc --reporter=lcov mocha --compilers js:babel-register && nyc report",
    "prebuild": "rimraf dist",
    "build": "babel --copy-files --out-dir dist --ignore *.test.js src",
    "semantic-release": "semantic-release pre && npm publish && semantic-release post"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hausenism/1game-texas-holdem.git"
  },
  "keywords": [
    "1game",
    "texas hold'em"
  ],
  "files": [
    "dist",
    "README.md"
  ],
  "author": "hausenism <hausenism@hotmail.com> (http://weibo.com/hausenism)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/hausenism/1game-texas-holdem/issues"
  },
  "homepage": "https://github.com/hausenism/1game-texas-holdem#readme",
  "dependencies": {
    "validate.js": "0.10.0"
  },
  "devDependencies": {
    "babel-cli": "^6.10.1",
    "babel-preset-es2015": "^6.9.0",
    "babel-preset-stage-2": "^6.11.0",
    "babel-register": "^6.9.0",
    "chai": "3.5.0",
    "commitizen": "2.8.2",
    "cz-conventional-changelog": "1.1.6",
    "ghooks": "^1.2.4",
    "mocha": "2.5.3",
    "nyc": "^6.6.1",
    "rimraf": "^2.5.2",
    "semantic-release": "^4.3.5"
  },
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    },
    "ghooks": {
      "pre-commit": "npm run cover && npm run check-coverage"
    }
  },
  "babel": {
    "presets": [
      "es2015",
      "stage-2"
    ]
  }
}
